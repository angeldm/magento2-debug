<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <container name="root">
        <block class="Magento\Framework\View\Element\Template" name="debug.profiler" template="Angeldm_Debug::profiler.phtml">
            <block class="Magento\Framework\View\Element\Template" name="debug.profiler.summary"
                   template="Angeldm_Debug::profiler/summary.phtml" as="debug_profiler_summary">
                <arguments>
                    <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Summary</argument>
                </arguments>
            </block>

            <container name="debug.profiler.sidebar" htmlTag="div" htmlId="sidebar" as="debug_profiler_sidebar">
                <block class="Magento\Framework\View\Element\Template" name="debug.profiler.sidebar.search"
                       template="Angeldm_Debug::search/input.phtml" as="debug_profiler_search">
                    <arguments>
                        <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Search</argument>
                    </arguments>
                </block>

                <container name="debug.profiler.sidebar.menu" htmlTag="ul" htmlId="menu-profiler" as="debug_profiler_menu">
                    <container name="debug.profiler.sidebar.menu.collectors">
                        <block class="Magento\Framework\View\Element\Template" name="request" template="Angeldm_Debug::menu/request.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">request</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="time" template="Angeldm_Debug::menu/time.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">time</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="database" template="Angeldm_Debug::menu/database.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">database</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="event" template="Angeldm_Debug::menu/event.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">event</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="plugin" template="Angeldm_Debug::menu/plugin.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">plugin</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="layout" template="Angeldm_Debug::menu/layout.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">layout</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="translation" template="Angeldm_Debug::menu/translation.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">translation</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="model" template="Angeldm_Debug::menu/model.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">model</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="cache" template="Angeldm_Debug::menu/cache.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">cache</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Framework\View\Element\Template" name="config" template="Angeldm_Debug::menu/config.phtml">
                            <arguments>
                                <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                                <argument name="collector_name" xsi:type="string">config</argument>
                            </arguments>
                        </block>
                    </container>
                    <block class="Magento\Framework\View\Element\Template" name="settings" template="Angeldm_Debug::menu/settings.phtml">
                        <arguments>
                            <argument name="view_model" xsi:type="object">Angeldm\Debug\Model\View\Menu</argument>
                        </arguments>
                    </block>
                </container>
            </container>
            <container name="debug.profiler.panel" as="debug_profiler_panel"/>
        </block>
    </container>
</layout>
